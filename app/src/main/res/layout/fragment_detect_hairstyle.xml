<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectHairstyleFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="312dp"
        android:layout_height="289dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_image_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSltPred"
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:text="SelectImage"
        app:layout_constraintEnd_toStartOf="@+id/takePhotoBtn"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnPredict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predict"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/btnChooseGender"
        app:layout_constraintTop_toBottomOf="@+id/takePhotoBtn" />

    <TextView
        android:id="@+id/result"
        android:layout_width="259dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChooseGender" />

    <Spinner
        android:id="@+id/btnChooseGender"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:text="Gender"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/btnSltPred" />

    <TextView
        android:id="@+id/textViewRecommnedation"
        android:layout_width="316dp"
        android:layout_height="121dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/recommendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommend Hairstyle"
        app:layout_constraintEnd_toEndOf="@+id/textViewRecommnedation"
        app:layout_constraintStart_toStartOf="@+id/textViewRecommnedation"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecommnedation" />

    <Button
        android:id="@+id/takePhotoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:onClick="takePhoto"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


</androidx.constraintlayout.widget.ConstraintLayout>